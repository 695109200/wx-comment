/* pages/calendar/calendar.wxss */

.calendar-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  padding-top: 100rpx;
  box-sizing: border-box;
  transition: all 0.3s;
  opacity: 0;
}
.ClickNoToday{
  background-color: bisque;
}
.calendar-box.active {
  opacity: 1;
}

.calendar-wrapper {
  width: 100%;
  border-top: 1px #f5f5f5 solid;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
  transition: all 0.3s;
  padding-bottom: 20rpx;
  transform: translateY(-100%);
}

.calendar-wrapper.active {
  transform: translateY(0%);
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 100rpx;
  /* width: 100%; */
  background: #fff;
  /* padding: 0 30rpx; */
  z-index: 10000;
}

.top-jiantou {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  line-height: 100rpx;
}

.iconfont{
  width: 40rpx;
  height: 40rpx;
}
.iconfont2{
  width: 40rpx;
  height: 40rpx;
  transform: rotate(180deg);
}
.btn {
  width: 200rpx;
  height: 53rpx;
  color: #5d52c3;
  font-size: 36rpx;
  box-sizing: border-box;
}

.calendar-panel {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  height: 80rpx;
}

.backtoday {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  line-height: 49rpx;
  border-right: none;
  font-size: 28rpx;
  color: #5d52c3;
  border-radius: 50%;
  text-align: center;
  border: 1px solid #5d52c3;
}

.date-befor, .date-after {
  /* border: 1px red solid; */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.calendar-panel-box {
  display: flex;
}
.dateIn{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  border:1px solid #5d52c3;
  /* background: #5d52c3; */
  position: absolute;
  line-height:76rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #000;
}
.dateIn2{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  border:1px solid #5d52c3;
  background: #5d52c3;
  position: absolute;
  line-height:76rpx;
  left: 50%;
  color: #fff;
  transform: translateX(-50%);
}
.dateOut{
  background-color: #fff;
  /* background-color: #5d52c3 */
}
.calendar-header {
  display: flex;
}

.calendar-header view {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color: rgba(0, 0, 0, 0.3);
  font-weight: 800;
}

.calendar-body {
  display: flex;
  flex-wrap: wrap;
}

.calender-body-date-week {
  display: flex;
  width: 100%;
  height: 80rpx;
}

.date {
  position: relative;
  width: 100%;
  text-align: center;
  color: #1c1c1c;
  background: #fff;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.date.active {
  background: red;
}

.placeholder {
  color: rgba(0, 0, 0, 0.3);
}

.date-current {
  color: #fff;
  height: 80rpx;
}

.data-circle {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #ff5a5f;
  z-index: 2;
}

.packup {
  width: 600rpx;
  margin: 20rpx auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #5d52c3;
  font-size: 30rpx;
  font-weight: 400;
  background-color: rgba(224, 224, 224,1);
  border-radius:5px; 
  letter-spacing: 2px;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
