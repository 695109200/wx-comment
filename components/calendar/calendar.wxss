.box {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  z-index: 997;
  top: 0;
}

.selectDayIcon {
  width: 40rpx;
  height: 40rpx;
}

.calendar-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 850rpx;
  background: #fff;
  z-index: 999;
  box-sizing: border-box;
  transition: all 0.3s;
  border-radius: 30rpx 30rpx 0 0;
  transform: translateY(100%);
  opacity: 0;
}

.ClickNoToday {
  background-color: bisque;
}

.calendar-box.active {
  transform: translateY(0%);
  opacity: 1;
}

.calendar-wrapper {
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
  height: 70%;
  transition: all 0.3s;
  padding-bottom: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  position: fixed;
  height: 60rpx;
  top: 80rpx;
  width: 100%;
  background: #fff;
}

.top-jiantou {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  line-height: 100rpx;
}

.dateTitle {
  width: 90%;
  margin: 20rpx auto;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 35rpx;
  font-weight: 600;
}

.chooesBox {
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.clickTip {
  width: 90%;
  height: 40rpx;
  margin: 20rpx auto;
  font-size: 27rpx;
  color: rgba(0, 0, 0, 0.7);
}

.chooesItem {
  width: 130rpx;
  font-size: 25rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: rgba(0, 0, 0, 0.4);
  border-radius: 999em;
}

.chooesItemActive {
  width: 130rpx;
  font-size: 25rpx;
  border: 1px solid rgba(1, 129, 255, 1);
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: rgba(1, 129, 255, 1);
  border-radius: 999em;
}

.iconfont {
  width: 40rpx;
  height: 40rpx;
}

.iconfont2 {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(180deg);
}

.btn {
  display: inline-block;
  width: auto;
  height: 53rpx;
  color: rgba(1, 129, 255, 1);
  font-size: 30rpx;
  margin-left: 40rpx;
  box-sizing: border-box;
}

.calendar-panel {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  height: 80rpx;
}

.date-befor, .date-after {
  /* border: 1px red solid; */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.calendar-panel-box {
  display: flex;
}

.dateIn {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  /* border: 1px solid #5d52c3; */
  /* background-color: rgba(0, 0, 0, 0.1); */
  position: absolute;
  line-height: 76rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #000;
}

.dateIn2 {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  /* border: 1px solid #5d52c3; */
  /* background: #5d52c3; */
  position: absolute;
  line-height: 76rpx;
  left: 50%;
  color: #000;
  transform: translateX(-50%);
}

.calendar-header {
  display: flex;
}

