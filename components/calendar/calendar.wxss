.NowDate {
  position: sticky;
  top: 0;
  width: 100%;
  margin: 20rpx auto 0 auto;
  font-size: 40rpx;
  background: rgb(250, 248, 251);
  z-index: 88;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
}

.NowDate text {
  margin-left: 40rpx;
}

.calendar-header view {
  width: 100%;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7);
  font-weight: 800;
}

.mainDate {
  width: 100%;
  height: 450rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background: rgba(250, 248, 251, 1);
  padding-top: 40rpx;
}

.calendar-body {
  display: flex;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.calender-body-date-week {
  display: flex;
  width: 100%;
  height: 80rpx;
}

.date {
  position: relative;
  width: 100%;
